{
    "name": "hunt-database",
    "license": "Apache-2.0",
    "copyright": "Copyright (C) 2018-2019, HuntLabs",
    "homepage": "https://www.huntlabs.net",
    "description": "Database abstraction layer for D programing language, support PostgreSQL / MySQL / SQLite.",
    "dependencies": {
        "hunt-sql": "~>1.2.0"
    },
    "configurations": [
        {
            "name": "default",
            "targetType": "library",
            "versions": [ "USE_POSTGRESQL", "USE_MYSQL", "USE_SQLITE" ],
            "libs-posix": [ "mysqlclient" ],
            "sourceFiles-windows-x86_64-dmd": [ "lib/win64/libmysql.lib" ],
            "copyFiles-windows-x86_64-dmd": [ 
                "lib/win64/libmysql.dll",
                "lib/win64/libeay32.dll",
                "lib/win64/ssleay32.dll" 
            ],
            "libs": [ "pq", "sqlite3" ]
        },
        {
            "name": "postgresql",
            "targetType": "library",
            "versions": [
                "USE_POSTGRESQL"
            ],
            "libs": [
                "pq"
            ],
            "copyFiles-windows-x86_64": [ "lib/win64/libpq.dll" ]
        },
        {
            "name": "mysql",
            "targetType": "library",
            "versions": [
                "USE_MYSQL"
            ],
            "libs-posix": [ "mysqlclient" ],
            "sourceFiles-windows-x86_64-dmd": [ "lib/win64/libmysql.lib" ],
            "copyFiles-windows-x86_64-dmd": [ 
                "lib/win64/libmysql.dll",
                "lib/win64/libeay32.dll",
                "lib/win64/ssleay32.dll" 
            ]
        },
        {
            "name": "sqlite",
            "targetType": "library",
            "versions": [
                "USE_SQLITE"
            ],
            "libs-posix": [
                "sqlite3"
            ],
            "libs-windows": [
                "sqlite3"
            ],
            "lflags-osx": ["-L/usr/local/opt/sqlite3/lib/"],
            "copyFiles-windows-x86_64": [ "lib/win64/sqlite3.dll" ],
            "sourceFiles-windows-x86_64" : [ "lib/win64/sqlite3.lib" ]
        }
    ]
}
